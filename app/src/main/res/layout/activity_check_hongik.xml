<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_check_hongik"
    android:background="@drawable/splashalpha"
    tools:context="com.dongjin.android.hongf.view.CheckHongik"
    >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="7"
                android:layout_centerVertical="true"
                android:id="@+id/check_et_number"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:hint="학번을 입력해주세요"
                app:backgroundTint="@color/black" />

            <Button
                android:text="확인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_btn_ok"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>


</RelativeLayout>
