<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/cardview_light_background"
        android:padding="10dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon1"
                    android:id="@+id/register_ig_korean"
                    android:layout_height="70dp"
                    android:background="@color/cardview_light_background" />

                <TextView
                    android:text="한식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon4"
                    android:id="@+id/register_ig_chinease"
                    android:layout_height="70dp" />

                <TextView
                    android:text="중식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon3"
                    android:id="@+id/register_ig_japanease"
                    android:layout_height="70dp" />

                <TextView
                    android:text="일식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon5"
                    android:id="@+id/register_ig_world"
                    android:layout_height="70dp" />

                <TextView
                    android:text="기타세계음식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon8"
                    android:id="@+id/register_ig_cafe"
                    android:layout_height="70dp" />

                <TextView
                    android:text="까페"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon10"
                    android:id="@+id/register_ig_bar"
                    android:layout_height="70dp" />

                <TextView
                    android:text="술집"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:orientation="vertical"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1">-->

                <!--<ImageView-->
                    <!--android:layout_width="match_parent"-->
                    <!--app:srcCompat="@drawable/foodicon9"-->
                    <!--android:id="@+id/register_ig_hope"-->
                    <!--android:layout_height="70dp" />-->

                <!--<TextView-->
                    <!--android:text="술집"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_horizontal" />-->
            <!--</LinearLayout>-->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon7"
                    android:id="@+id/register_ig_fastfood"
                    android:layout_height="70dp" />

                <TextView
                    android:text="패스트푸드"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon6"
                    android:id="@+id/register_ig_koreansnack"
                    android:layout_height="70dp" />

                <TextView
                    android:text="분식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/foodicon2"
                    android:id="@+id/register_ig_wastern"
                    android:layout_height="70dp" />

                <TextView
                    android:text="양식"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="적용"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filter_btn_apply"
                android:background="@drawable/kakao_account_button_background"
                android:layout_weight="1" />

            <Button
                android:text="취소"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filter_btn_cancel"
                android:layout_weight="1"
                android:background="@drawable/kakao_account_button_background" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
